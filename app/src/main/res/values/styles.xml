<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#f3a94f</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FontChange">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/open_sans_condensed_bold</item>
    </style>

  <style name="tabChange">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/open_sans</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
